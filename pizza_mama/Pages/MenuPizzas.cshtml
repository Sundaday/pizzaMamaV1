@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <title>Menu</title>
    </head>
    <body>
        <h1>Our Pizzas</h1>
        <ul>
            @foreach(var pizza in Model.Pizza)
            {
                <li>
                    @pizza.name - @pizza.price € - @pizza.vegan - @pizza.ingredients
                </li>
            }
        </ul>
        <a asp-page="Index">Home</a>
    </body>
</html>

                    

