@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Menu</title>
        <link rel="stylesheet" href="~/css/style.css" />
    </head>
    <body class="body_menu">
        <a asp-page="Index">
            <img src="~/image/small_logo.png" class="small_logo"  />
        </a>
        <h1 class="h1_menu"> Pizzas</h1>
        <ul>
            @foreach(var pizza in Model.Pizza)
            {
                <li class="list_menu">
                    @pizza.name - @pizza.price € - @pizza.vegan - @pizza.ingredients
                </li>
            }
        </ul>
    </body>
</html>

                    

